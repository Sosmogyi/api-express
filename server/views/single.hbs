<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}} <span class="badge">{{priority}}</span></h3>
  </div>
  <div class="panel-body">
    {{description}}
  </div>
  <div class="panel-footer">Létrehozás időpontja: {{date}}</div>
  <form class="" action="/todo/{{id}}?_method=DELETE" method="post">
    <a href="/todo/{{id}}/edit" type="button" class="btn btn-default btn-warning buttonEdit">
      Szerkesztése
    </a>
    <button type="submit" class="btn btn-default btn-danger buttonDelete">
      Törlése
    </button>
    <a href="/todo/" type="button" class="btn btn-default btn-info buttonDelete">
      Vissza a listához
    </a>
  </form>
</div>
